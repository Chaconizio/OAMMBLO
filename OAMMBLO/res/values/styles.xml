<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTheme" parent="android:Theme.Light"></style>
    <style name="FormField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
	</style>
	<style name="BaseButton">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:padding">15dp</item>
	</style>
	<style name="BlueButton" parent="@style/BaseButton">
        <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/btn_blue_bg_selector</item>
	</style>
	<style name="WhiteButton" parent="@style/BaseButton">
        <item name="android:background">@drawable/btn_white_bg_selector</item>
	</style>
</resources>